<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>
   
    <%- include('../partials/nav.ejs') %>
    <div class="blogs content">
        <h2>All blogs testing</h2>
          <h2><%= blogs.length%> </h2>
          <% if(blogs.length > 0){ %>
            <% blogs.forEach(blog => { %>
                <a class="single" href="/blogs/<%= blog._id %>">
                <h3><%= blog.title %></h3>
                <p><%= blog.snippet %></p>
                </a>
          <%  }) %>
    <%} else {%>
        <p> There are no blogs to display here ....</p>
   <% } %>
    </div>
    <%- include('../partials/footer.ejs') %>
</body>
</html>